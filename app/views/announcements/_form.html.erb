<%= semantic_form_for @announcement do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => "form-control flat" %><br>
  </div>

  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_field :body, :class => "form-control flat" %><br>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-success btn-lg' %>
  </div>
<% end %>
