<% set_page_title "Register" %>
<h4 class="page-header">Sign up</h4>
<div class="col-xs-12 col-md-6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, :autofocus => true, :class => 'form-control flat' %>
  </div>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, :class => 'form-control flat' %>
  </div>

  <div class="form-group">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, :class => "form-control flat" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :autocomplete => "off", :class => 'form-control flat' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :autocomplete => "off", :class => 'form-control flat' %>
  </div>

  <div class="form-group">
    <%= f.label :name, "Name (This will be hidden to others.)" %>
    <%= f.text_field :name, :class => "form-control flat" %>
  </div>

  <div class="form-group">
    <%= f.label :school, "School, Class and Seat Number (This will be hidden to others.)" %>
    <%= f.text_field :school, :class => "form-control flat" %>
  </div>

  <div class="form-group">
    <%= f.label :gradyear, "Graduation Year of High School (e.g. 103)" %>
    <%= f.number_field :gradyear, :class => "form-control flat" %>
  </div>

  <div>
    <%= f.submit "Sign up", :class => 'btn btn-info btn-lg' %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
