<% comment = post.comments.build %>
<% if post.postable %>
  <% form_target = [post.postable, post, comment] %>
<% else %>
  <% form_target = [post, comment] %>
<% end %>
<%= form_for form_target do |f| %>
  <div class="field">
    <%= f.label :title, 'Title: ' %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content, raw('Content: (All characters are rendered with <a href="https://guides.github.com/features/mastering-markdown/" >Markdown</a>)') %><br>
    <%= f.text_area :content %>
  </div>
  <br />
  <div class="submit_comment" >
    <%= f.submit "Create Comment", :class => "btn btn-primary btn-xs" %>
  </div>
<% end %>
